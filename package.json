{
  "name": "chordmaster",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "deploy": "npm run build && wrangler pages deploy",
    "deploy-dryrun": "npm run build && wrangler deploy functions/[[path]].ts --dry-run",
    "dev": "remix vite:dev",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "format-fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint-fix": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
    "start": "wrangler pages dev ./build/client",
    "test": "jest --watchAll",
    "tsc": "tsc --build --verbose",
    "preview": "npm run build && wrangler pages dev",
    "cf-typegen": "wrangler types",
    "download-file1": "tsx ./scripts/download-file.ts https://raw.githubusercontent.com/T-vK/chord-collection/refs/heads/master/chords.json ./public/assets/chords/chords.json",
    "download-file2": "tsx ./scripts/download-file.ts https://raw.githubusercontent.com/tombatossals/chords-db/master/lib/guitar.json ./public/assets/chords/guitar.json",
    "download-files": "npm run download-file1 && npm run download-file2"
  },
  "dependencies": {
    "@artutra/ts-data-json": "^1.1.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@fontsource-variable/montserrat": "^5.1.0",
    "@fontsource-variable/roboto-mono": "^5.1.0",
    "@fontsource-variable/roboto-slab": "^5.1.0",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.4",
    "@reduxjs/toolkit": "^2.5.0",
    "@remix-run/cloudflare": "^2.15.2",
    "@remix-run/cloudflare-pages": "^2.15.2",
    "@remix-run/react": "^2.15.2",
    "@tanstack/react-table": "^8.20.6",
    "add": "^2.0.6",
    "chord-symbol": "^4.0.0",
    "chordsheetjs": "^10.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "deepmerge": "^4.3.1",
    "firebase": "^11.1.0",
    "he": "^1.2.0",
    "i18next": "^23.16.8",
    "i18next-browser-languagedetector": "^8.0.2",
    "isbot": "^5.1.18",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.2.0",
    "react-svg": "^16.2.0",
    "remix-i18next": "^6.4.1",
